<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popLl"
    android:layout_width="250dip"
    android:layout_height="wrap_content"
    android:background="@drawable/box_green"
    android:clickable="true"
    android:focusable="true" >

    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="190dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/park_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="名称："
            android:textColor="@color/black2"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/park_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/park_name"
            android:layout_marginTop="5dip"
            android:text="车位（空/总）："
            android:textColor="@color/black2"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/park_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/park_num"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:text="收费："
            android:textColor="@color/black2"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/park_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/park_cost"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:text="距离："
            android:textColor="@color/black2"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/park_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/park_distance"
            android:layout_marginTop="5dip"
            android:text="地址："
            android:textColor="@color/black2"
            android:textSize="15dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/text" >

        <ImageButton
            android:id="@+id/naviIb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/navigation_bg" />
    </LinearLayout>

</RelativeLayout>